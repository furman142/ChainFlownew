<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chain_Flow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_green</item>
        <item name="colorPrimaryVariant">@color/theme_green_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_green</item>
        <item name="colorSecondaryVariant">@color/theme_green_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <!-- Add these new items -->
        <item name="editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="android:editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        
        <!-- Make sure EditText has proper colors -->
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>
</resources>